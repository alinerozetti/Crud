@model WebCrud.Models.Fornecedor

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: #FF9F94 !important; font-weight: bold !important;">Cadastro de Fornecedor</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input id="radioPF" type="radio" name="tipo_pessoa" value="PF" checked/> 
                <label for="radioPF">Pessoa Física</label>
                <input id="radioPJ" type="radio" name="tipo_pessoa" value="PJ" />
                <label for="radioPJ">Pessoa Jurídica</label>
            </div>
            <div class="form-group">
                <label asp-for="CNPJ_CPF" id="labelDoc" class="control-label"> CPF</label>
                <input asp-for="CNPJ_CPF" class="form-control" maxlength="14" />
                <span asp-validation-for="CNPJ_CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div id="container" class="form-group">
            <div class ="form-group">
                <label asp-for="Rg" class="control-label"></label>
                <input asp-for="Rg" class="form-control" />
                <span asp-validation-for="Rg" class="text-danger"></span>
            </div>
            <div class ="form-group">
                <label asp-for="DtNascimento" class="control-label"></label>
                <input asp-for="DtNascimento" class="form-control" />
                <span asp-validation-for="DtNascimento" class="text-danger"></span>
            </div>
            </div>  
            <div class="form-group">
                <input type="submit" value="Cadastrar" style="margin-top: 15px; margin-bottom: 15px; border-radius: 15px; background: #FFE4E1; color: #FF9F94; border: 0 none;" />
            </div>
        </form>
    </div>
</div>
</>
<div>
    <a asp-action="Index">Voltar</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    var radioPF = document.querySelector('#radioPF');
    var radioPJ = document.querySelector('#radioPJ');
    radioPF.addEventListener("change", function (e){
       // console.log("Clicou no PF");
        var div = document.querySelector("#container");
        div.style.display = "block";
        document.querySelector("#labelDoc").innerHTML = "CPF";
        
    });
    radioPJ.addEventListener("change", function (e) {
        console.log("Clicou no PJ");
        var div = document.querySelector("#container");
        div.style.display = "none";
        
        document.querySelector("#labelDoc").innerHTML = "CNPJ";
    });

    //validação de cpf/cnpj
    
    
    

</script>
