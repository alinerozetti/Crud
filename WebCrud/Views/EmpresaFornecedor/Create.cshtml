@model WebCrud.Models.EmpresaFornecedor

@{
    ViewData["Title"] = "Create";
}

<h1 style ="color: #FF9F94;">Cadastrar</h1>

<h4 style="color: #FF9F94;">Empresa e Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_Empresa" class="control-label"></label>
                <select asp-for="Id_Empresa" class ="form-control" asp-items="ViewBag.Id_Empresa"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_Fornecedor" class="control-label"></label>
                <select asp-for="Id_Fornecedor" class ="form-control" asp-items="ViewBag.Id_Fornecedor"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" style="margin-top: 15px; margin-bottom: 15px; border-radius: 15px; background: #FFE4E1; color: #FF9F94; border: 0 none;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
